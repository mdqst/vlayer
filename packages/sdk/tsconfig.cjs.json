{
  "extends": "./tsconfig.base.json",
  "exclude": [
    "./src/**/*.test.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist/cjs",
    "module": "CommonJS",
    "noEmit": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "verbatimModuleSyntax": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
